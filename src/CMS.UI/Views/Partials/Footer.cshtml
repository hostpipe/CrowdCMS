@model CMS.UI.Models.FooterModel
<footer>
    <div class="col-sm-12">
        <div class="container">
            @if (Model.UseTemplate)
            {
            <div class="col-sm-4">
                @Html.Raw(Model.FooterContent)
            </div>
            }
            <div class="col-sm-4">
                <span>@ViewBag.CompanyName @CMSHelpers.Copyright((int)ViewBag.LaunchYear)</span>
            </div>
            <div class="col-sm-4">
                <p class="footer-headings">Website Links</p>
                <ul>
                    @CMSHelpers.WebsiteMenu(Model.WebsiteMenu, Request.Url.AbsolutePath)
                </ul>
            </div>
            <div class="col-sm-4">
                <p class="footer-headings">Useful Links</p>
                <ul>
                    <li><a href="http://validator.w3.org/check?uri=referer" title="Validate HTML5" rel="external">HTML5</a></li>
                    <li><a href="http://get.adobe.com/uk/reader/" title="Get Adobe Reader" rel="external">Get Adobe Reader</a></li>
                    <li class="last"><a href="http://www.hostpipe.co.uk" title="Website Design Gloucestershire" rel="external">Website Design Gloucestershire</a></li>
                </ul>
            </div>
            @*@foreach (var item in Model.PaymentMethods)
            {
                <img class="footerPayment" src="@item.FilePath" alt="@item.Name" id="@item.Code" />
            }*@
        </div>
    </div>
</footer>