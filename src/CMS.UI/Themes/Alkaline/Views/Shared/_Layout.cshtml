<script type="text/javascript" src="/Themes/Alkaline/plugins/knob/js/jquery.knob.js"></script>
<script type="text/javascript" src="/Themes/Alkaline/js/jquery.bxslider.min.js"></script>
<!-- MAXIMAGE SLIDER -->
<script type="text/javascript" src="/Themes/Alkaline/plugins/maximage/js/jquery.cycle.all.min.js"></script>
